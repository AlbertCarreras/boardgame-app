<%= form_for @event do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.label :address %>
  <%= f.text_field :address %><br>
  <%= f.label :city %>
  <%= f.text_field :city %><br>
  <%= f.label :country %>
  <%= f.text_field :country %><br>
  <%= f.label :date %>
  <%= f.datetime_field(:date, min: Date.today) %>
  <%= f.submit %>
<% end %>
