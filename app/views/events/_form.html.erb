<%= form_for @event, :html => {:class => "ui form"} do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %><br>
  </div>
  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %><br>
  </div>
  <div class="field">
    <%= f.label :date %>
    <%= f.datetime_field(:date, min: Date.today) %>
  </div>
  <%= f.submit :class => "ui button" %>
<% end %>
