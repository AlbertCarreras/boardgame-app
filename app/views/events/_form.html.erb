<h3 class="error"><%= @event.errors.full_messages[0] if @event.errors.full_messages.present? %></h3>
<%= form_for @event, :html => {:class => "ui form"} do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %><br>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %><br>
  </div>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %><br>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %><br>
  </div>
  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %><br>
  </div>
  <div class="field">
    <%= f.label :date %>
    <%= f.datetime_field(:date, min: Date.today) %>
  </div>
  <%= f.submit :class => "ui button" %>
<% end %>
