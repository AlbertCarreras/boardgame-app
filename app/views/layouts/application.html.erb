<!DOCTYPE html>
<html>
  <head>
    <title>BoardgameApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <title>Semantic UI CDN</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>

  </head>

  <body>
    <div class="header">
        <h1>Board Games with Strangers</h1>
        <div class="ui secondary  menu">
            <a class="item" <%= link_to "Events", :events %>></a>
          <a class="item" <%= link_to "Board Games", :games %>></a>
          <a class="item" <%= link_to "Users", :users %>></a>
          <a class="item" <%= link_to "Analytics", "/analytics" %>></a>

          <div class="right menu">
            <a class="item" <%= link_to "Welcome, #{user_name}", '/' %> ></a>
            <a class="ui item"<%= link_to "Logout", '/logout', method: :post %>></a>
          </div>
        </div><hr>
    </div>
    <div class="main-container">
      <%= yield %>
    </div>
  </body>
</html>
