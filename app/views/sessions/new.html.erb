<div class="flex-container">

  <%= form_for :sessions, controller: "sessions", action: "create", :html => {:class => "ui form flex-container"} do |f|  %>

    <div class="field flex-container">
      <%= f.label :name, class: 'element-welcome-bar' %>
      <%= f.text_field :name %>
    </div>

    <div class="field flex-container">
      <%= f.label :password, class: 'element-welcome-bar'%>
      <%= f.password_field :password %>
    </div>

    <%= f.submit "Log In", :class => "ui button", :id => "element-welcome-bar" %>
  <% end %>
  <div>
    <p>or <%= link_to "Sign up!", "/signup" %></p>
  </div>
</div>
