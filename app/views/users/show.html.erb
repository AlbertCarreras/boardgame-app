<h1><%= @user.name %></h1>

<h3>My Boardgames</h3>
<ul>
  <% @user.ownerships.each do |ownership| %>
  <li>
    <%=  link_to ownership.game.title, ownership.game %>
    <% if same_user?(@user) %>
      <%= form_for ownership, method: 'delete' do |f| %>
      <%= f.hidden_field :ownership_id, value: ownership.id %>
      <%= f.submit "Remove" %>
      <% end %>
    <% end %>
  </li>
  <% end %>
</ul>

